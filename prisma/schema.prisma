generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                            String    @id @default(cuid())
  name                          String?
  email                         String    @unique
  password                      String?   // Changed to optional
  emailVerified                 Boolean   @default(false)
  role                          UserRole  @default(CUSTOMER)
  points                        Int       @default(0)
  image                         String?
  verificationToken             String?   @unique
  passwordResetToken            String?   @unique
  passwordResetExpires          DateTime?
  emailVerificationStatus       String?   @default("PENDING")
  emailVerificationAttempts     Int       @default(0)
  emailVerificationLastAttempt  DateTime?
  businesses                    Business[]
  createdAt                     DateTime  @default(now())
  updatedAt                     DateTime  @updatedAt
  accounts                      Account[]
  sessions                      Session[]
  
  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Business {
  id            String    @id @default(cuid())
  name          String
  category      String
  phone         String
  website       String?
  address       String
  city          String
  county        String
  eircode       String?
  openingHours  Json
  ownerId       String
  owner         User      @relation(fields: [ownerId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("businesses")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  BUSINESS_OWNER
  CUSTOMER
  MODERATOR
}