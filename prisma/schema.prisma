generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String      @id @default(cuid())
  email                 String      @unique
  name                  String?
  password              String
  role                  UserRole    @default(CUSTOMER)
  emailVerified         Boolean     @default(false)
  points                Int         @default(0)
  businesses            Business[]
  verificationToken     String?     @unique
  passwordResetToken    String?     @unique
  passwordResetExpires  DateTime?
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt

  @@map("users")
}

model Business {
  id            String    @id @default(cuid())
  name          String
  category      String
  phone         String
  website       String?
  address       String
  city          String
  county        String
  eircode       String?
  openingHours  Json
  ownerId       String
  owner         User      @relation(fields: [ownerId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("businesses")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  BUSINESS_OWNER
  CUSTOMER
  MODERATOR
}